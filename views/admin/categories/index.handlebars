<div class="row">
    <div class="col-sm-4">
        <h1>Create Category</h1>
        <form action="/admin/categories/create" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" placeholder="Enter title" class="form-control">
            </div>
             <button class="btn btn-primary">Create Category</button>
        </form>
    </div>
    <div class="col-sm-8">
        <h1>Categories</h1>
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td><a href="/admin/categories/edit/{{id}}">{{id}}</a></td>
                    <td>{{name}}</td>
                    <td><a href="/admin/categories/edit/{{id}}" class="btn btn-info">Edit</a></td>
                    <td><a href="/admin/categories/delete/{{id}}?_method=DELETE" class="btn btn-danger">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>