<h1>Comments</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>id</th>
            <th>Owner</th>
            <th>Approve Status</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each comments}}
        <tr>
            <td>{{id}}</td>
            <td>{{user.firstName}}</td>
            <td><input data-id="{{id}}" type="checkbox" {{#if approveComment}} checked {{/if}} name="approveComment"></td>
            <td>{{generateTime createdAt 'MMMM Do YYYY'}}</td>
            <td><a href="/admin/comments/delete/{{id}}?_method=DELETE" class="btn btn-danger">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>